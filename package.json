{
  "name": "vscode-prompt-debug",
  "displayName": "VSCode Prompt Debug",
  "version": "0.0.1",
  "publisher": "rozzzly",
  "description": "Extension that allows you quickly launch a vscode debug session.",
  "author": {
    "name": "rozzzly",
    "email": "pclienau@gmail.com"
  },
  "engines": {
    "vscode": "^1.1.0",
    "node": "^7.4.0"
  },
  "icon": "images/mock-debug-icon.svg",
  "categories": [
    "Debuggers"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/rozzzly/vscode-prompt-debug.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/vscode-prompt-debug/issues"
  },
  "dependencies": {
    "vscode-debugadapter": "^1.15.0",
    "vscode-debugprotocol": "^1.15.0"
  },
  "devDependencies": {
    "@types/node": "^7.0.4",
    "typescript": "^2.1.5",
    "vscode": "^1.0.3",
    "yarn": "^0.19.1"
  },
  "scripts": {
    "prepublish": "node ./node_modules/typescript/bin/tsc -p ./",
    "compile": "node ./node_modules/typescript/bin/tsc -p ./",
    "watch": "node ./node_modules/typescript/bin/tsc -w -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "main": "./out/extension",
  "activationEvents": [
    "onCommand:extension.prompt-debug.getProgramName"
  ],
  "contributes": {
    "breakpoints": [
      {
        "language": "markdown"
      }
    ],
    "debuggers": [
      {
        "type": "mock",
        "label": "Mock Debug",
        "program": "./out/mockDebug.js",
        "runtime": "node",
        "variables": {
          "AskForProgramName": "extension.mock-debug.getProgramName"
        },
        "configurationSnippets": [
          {
            "label": "Mock Debug: Launch",
            "description": "A new configuration for launching a mock debug program",
            "body": {
              "type": "mock",
              "request": "launch",
              "name": "${2:Launch Program}",
              "program": "^\"\\${workspaceRoot}/${1:Program}\""
            }
          }
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a text file.",
                "default": "${workspaceRoot}/${command.AskForProgramName}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": "extension.mock-debug.provideInitialConfigurations"
      }
    ]
  }
}
